<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', readOnly: false, book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= link_to "新着順", { sort: 'newest' }, { class: books_current_sort('newest') } %>
      <span> | </span>
      <%= link_to "評価の高い順", { sort: 'highest' }, { class: books_current_sort('highest') } %>
      <span> | </span>
      <%= link_to "いいね数順", { sort: 'like' }, { class: books_current_sort('like') } %>
      <%= render 'index', books: @books%>
      <%= paginate @books %>
    </div>
  </div>
</div>