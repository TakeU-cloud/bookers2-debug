<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: Book.new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td>
            <%= render 'favorite', book: @book %>
          </td>
          <td>
            <span class="small">コメント数:</span><span><%= @book.book_comments.count %></span>
          </td>
        <% if @book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        <% end %>
        </tr>
      </table>
    <% @book.book_comments.each do |book_comment| %>
      <div class="d-flex align-items-center">
        <%= link_to user_path(book_comment.user.id) do %>
          <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
          <%= book_comment.user.name %>
        <% end %>
        <span><%= book_comment.comment %></span>
        <span class="ml-2">
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete, class: "btn btn-danger" %>
        <% end %>
        </span>
      </div>
    <% end %>
    <%= form_with model: [@book, @book_comment], local: true do |f| %>
      <div class="form-group">
        <%= f.label :comment %>
        <%= f.text_area :comment, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>