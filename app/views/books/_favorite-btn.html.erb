<% if book.favorited_by?(current_user) %>
  <p>
    <%= form_with url: book_favorites_path(book), method: :delete, local: false do |f| %>
      <%= f.submit "♥#{book.favorites.count}", class: "text-danger btn btn-link" %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= form_with url: book_favorites_path(book), local: false do |f| %>
      <%= f.submit "♡#{book.favorites.count}", class: "btn btn-link" %>
    <% end %>
  </p>
<% end %>
