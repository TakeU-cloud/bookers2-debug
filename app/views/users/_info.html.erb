<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to "#{ user.following.count }", following_user_path(user.id) %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to "#{ user.followers.count }", followers_user_path(user.id) %>
    </th>
  </tr>
  <tr>
  <% unless user == current_user %>
    <th colspan="2">
      <% if current_user.following?(user) %>
        <%= link_to "フォローを外す", relationship_path(current_user.active_relationships.find_by(followed_id: user.id)), method: :delete, class: "btn btn-success" %>
      <% else %>
        <%= link_to "フォローする", relationships_path(follower_id: current_user.id, followed_id: user.id), method: :post, class: "btn btn-success" %>
      <% end %>
    </th>
  <% end %>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>