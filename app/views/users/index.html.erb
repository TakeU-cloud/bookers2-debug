<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', readOnly: false, book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <%= link_to "グループを作成する", new_group_path, class: "small" %>
      <span> | </span>
      <%= link_to "グループ一覧", groups_path, class: "small" %>
      <span> | </span>
      <%= link_to "天気情報", weather_info_show_path, class: "small" %>
      <%= render 'index',users: @users %>
    </div>
  </div>
</div>
