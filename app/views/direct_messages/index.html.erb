<%= render 'layouts/errors', obj: @direct_message %>
<h2><%= @user.name %>さんとのチャット</h2>
<ul class="list-group col-6 mx-auto">
<% @direct_messages.each do |message| %>
  <li class="list-group-item border-0 py-1">
    <strong><%= message.sender.name %>:</strong>
    <%= message.content %>
  </li>
<% end %>
</ul>
<%= form_with model: [@user, @direct_message], local: true do |f| %>
  <div class="form-group">
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.submit '送信' %>
  </div>
<% end %>
